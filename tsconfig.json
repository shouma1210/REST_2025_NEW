{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "ES2017"
    ],
    "useDefineForClassFields": false,
    "module": "commonjs",
    "rootDir": "./back",
    "outDir": "./dist/back",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "back/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}